{
    "name": "newfold-labs/wp-module-next-steps",
    "description": "A Newfold module to manage next steps for a customer in a brand plugin.",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Evan Mullins",
            "homepage": "https://evanmullins.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "NewfoldLabs\\WP\\Module\\NextSteps\\": "includes"
        },
        "files": [
            "bootstrap.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "NewfoldLabs\\WP\\Module\\NextSteps\\Tests\\PHPUnit\\": "tests/phpunit"
        }
    },
    "repositories": {
        "newfold": {
            "type": "composer",
            "url": "https://newfold-labs.github.io/satis/",
            "only": [
                "newfold-labs/*"
            ]
        }
    },
    "require-dev": {
        "lucatume/wp-browser": "*",
        "johnpbloch/wordpress": "@stable",
        "newfold-labs/wp-php-standards": "^1.2.5",
        "phpunit/phpcov": "*",
        "phpunit/phpunit": "^9.6",
        "wp-cli/i18n-command": "^2.6.5",
        "yoast/phpunit-polyfills": "^1.1"
    },
    "require": {
        "newfold-labs/wp-module-data": "^2.8.6",
        "newfold-labs/wp-module-loader": "^1.0.12"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "johnpbloch/wordpress-core-installer": true
        },
        "platform": {
            "php": "7.3.0"
        }
    },
    "scripts": {
        "fix": "vendor/bin/phpcbf . --standard=phpcs.xml",
        "i18n-pot": "vendor/bin/wp i18n make-pot . ./languages/wp-module-next-steps.pot --headers='{\"Report-Msgid-Bugs-To\":\"https://github.com/newfold-labs/wp-module-next-steps/issues\",\"POT-Creation-Date\":\"2025-06-06T06:30:00+00:00\"}' --exclude=src,tests,wordpress",
        "i18n-po": "vendor/bin/wp i18n update-po ./languages/wp-module-next-steps.pot ./languages",
        "i18n-mo": "vendor/bin/wp i18n make-mo ./languages",
        "i18n-php": "vendor/bin/wp i18n make-php ./languages",
        "i18n-json": "rm -f languages/*.json && vendor/bin/wp i18n make-json ./languages --no-purge --pretty-print",
        "i18n": [
            "@i18n-pot",
            "@i18n-po",
            "@i18n-php",
            "@i18n-json"
        ],
        "i18n-ci-pre": [
            "@i18n-pot",
            "@i18n-po"
        ],
        "i18n-ci-post": [
            "@i18n-po",
            "@i18n-php",
            "@i18n-json"
        ],
        "lint": "vendor/bin/phpcs . --standard=phpcs.xml -s",
        "test": "vendor/bin/phpunit",
        "test-codecept": [
            "codecept run wpunit"
        ],
        "test-coverage": [
            "codecept run wpunit --coverage wpunit.cov",
            "phpcov merge --php tests/_output/merged.cov --html tests/_output/html tests/_output;",
            "echo \"open tests/_output/html/index.html\" to view the report"
        ]
    },
    "scripts-descriptions": {
        "fix": "Automatically fix coding standards issues where possible.",
        "lint": "Check files against coding standards.",
        "i18n": "Generate new language files.",
        "i18n-pot": "Generate a .pot file for translation.",
        "i18n-po": "Update existing .po files.",
        "i18n-mo": "Generate new language .mo files.",
        "i18n-json": "Generate new language .json files.",
        "i18n-ci-pre": "Command for CI to run before generating language files.",
        "i18n-ci-post": "Command for CI to run after generating language files.",
        "test": "Run tests.",
        "test-coverage": "Run tests with coverage, merge coverage and create HTML report."
    }
}